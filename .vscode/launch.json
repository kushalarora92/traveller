{
  "version": "2.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/server.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "runtimeArgs": ["-r", "dotenv/config"],
      "outFiles": [
        "${workspaceFolder}/build/*.js",
        "${workspaceFolder}/build/**/*.js",
        "${workspaceFolder}/build/**/**/*.js",
        "${workspaceFolder}/build/**/**/**/*.js"
      ]
    }
  ]
}
